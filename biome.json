{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"css": {
		"parser": {
			"cssModules": false,
			"tailwindDirectives": true
		}
	},
	"linter": {
		"enabled": true
	},
	"overrides": [
		{
			"includes": ["components/editor/**/*", "components/blocks/editor-x/**/*"],
			"linter": {
				"rules": {
					"suspicious": {
						"noBitwiseOperators": "off",
						"noEvolvingTypes": "off",
						"noImplicitAnyLet": "off",
						"noExplicitAny": "warn",
						"noEmptyBlockStatements": "off"
					},
					"complexity": {
						"noExcessiveCognitiveComplexity": "off",
						"noForEach": "off"
					},
					"style": {
						"noNestedTernary": "off",
						"noParameterAssign": "off",
						"useDefaultSwitchClause": "off"
					},
					"performance": {
						"useTopLevelRegex": "off"
					}
				}
			}
		},
		{
			"includes": ["components/docs/**/*", "content/docs/**/*"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off",
						"noAlert": "off"
					}
				}
			}
		}
	]
}
